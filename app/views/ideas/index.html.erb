<p id="notice"><%= notice %></p>

<h1 style="color:#d90d11"> Trang S2 Ruby on Rails</h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-4">
      <%= image_tag(@idea.picture_url(:small_thumb)) if @idea.picture.present? %>
        <h4 style="font-style: italic;font-weight: bolder;text-transform: uppercase;">
          <%= link_to idea.name, idea %></h4>
        <%= idea.description %>
      </div>
    <% end %>
  </div>
<% end %>